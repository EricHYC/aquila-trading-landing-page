---
import { getTransLink } from '../utils/i18n'
import { getHref } from '../utils/getHref'
const { language, siteSettings } = Astro.props
---

<header class="absolute top-0 right-0 left-0 border-b border-border z-50" id="header">
  <nav class="max-w-[1016px] mx-auto px-6 flex justify-between items-center md:grid md:grid-cols-3 py-6">
    <!-- Logo -->
    <div class="flex items-center gap-1 z-50">
      <a href={getTransLink(language, `/`)}>
        <img 
          src={siteSettings.logo.filename} 
          alt={siteSettings.logo.alt} 
          class="h-8 md:h-12 w-auto"
        />
      </a>
    </div>

    <!-- Navigation -->
    <ul class="flex flex-col items-center gap-8 text-white text-2xl md:flex-row md:bg-transparent md:text-[0.81rem] md:gap-0">
      {siteSettings.navigation.length &&
        siteSettings.navigation.map((navItem) => (
          <li>
            <a
              href={getHref(navItem.url)}
              class="block px-4 py-2 md:px-4 md:py-2 capitalize hover:opacity-80"
            >
              {navItem.label}
            </a>
          </li>
        ))
      }
    </ul>

    <!-- Right side (currently empty, but kept for layout alignment) -->
    <div class="flex items-center gap-4 md:justify-self-end"></div>
  </nav>
</header>
