---
import { storyblokEditable, renderRichText } from '@storyblok/astro'
import Button from '../components/Button.astro'

const { blok, translate } = Astro.props
const renderedRichText = renderRichText(blok.content)
---

<article {...storyblokEditable(blok)}>
  <div
    class="min-h-[44vh] flex flex-col justify-center items-center bg-no-repeat bg-cover bg-center text-white"
    style={`background-image: ${blok.image.filename ? `url(${blok.image.filename})` : ''}`}
    >
    <div class="max-w-[624px] mx-auto flex flex-col justify-center items-center pt-14">
      <span class="block text-center opacity-65 leading-[24px] mb-3">
        {translate.report}
      </span>
      <h1 class="text-5xl leading-[120%] text-center font-adamina">
        {blok.title}
      </h1>

      <div class="flex justify-center items-center gap-x-4 my-8">
        <div class="font-medium">{blok.author}</div>
        <span class="w-[5px] h-[5px] bg-white opacity-50 rounded-[0.5px]"></span>
        <div class="font-medium">{blok.published_date}</div>
      </div>

      <Button label={translate.returnReports} href="" />
    </div>
  </div>

  <div class="container mx-auto p-24">
    <div class="prose" set:html={renderedRichText} />
  </div>
</article>
