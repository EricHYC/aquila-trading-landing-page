---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'
const { blok } = Astro.props
---

<section
  {...storyblokEditable(blok)}
  class="min-h-[75vh] flex flex-col justify-end items-center bg-no-repeat bg-cover bg-top"
  style={`background-image: ${blok.image.filename ? `url(${blok.image.filename})` : ''}`}
  >

  <div class="max-w-[624px] mx-auto mb-20 flex flex-col justify-center items-center">
    <h2 class="text-white text-5xl leading-[120%] text-center font-adamina mb-4">
      {blok.headline}
    </h2>

    {blok.lead && (
      <p class="mb-8 text-white opacity-65">
        {blok.lead}
      </p>
    )}

    {blok.button && blok.button.length > 0 && (
      <StoryblokComponent blok={blok.button[0]} />
    )}
  </div>

  <div class="container">
    {blok.partners && blok.partners.length > 0 && (
      <StoryblokComponent blok={blok.partners[0]} />
    )}
  </div>
</section>
