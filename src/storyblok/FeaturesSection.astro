---
import { storyblokEditable } from '@storyblok/astro'
const { blok } = Astro.props
---

<section {...storyblokEditable(blok)}>
  <div class="container mx-auto">
    {blok.title && <h2 class="text-black text-5xl leading-[120%] font-adamina mb-8 px-6 max-w-[430px]">{blok.title}</h2>}

    <ul class="grid md:grid-cols-3 gap-6">
      {blok.features && blok.features.map((feature) => (
        <li class="bg-white">
          <h3 class="p-6 text-black text-xl font-adamina capitalize">{feature.title}</h3>
          <img class="block w-full" src={feature.image.filename} alt={feature.image.alt} />
          <p class="p-6 text-black opacity-65">{feature.description}</p>
        </li>               
      ))}              
    </ul>
  </div>
</section>
