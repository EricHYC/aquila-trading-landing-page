---
import { getTransLink } from '../utils/langs'
import Button from '../components/Button.astro'
const { blok, language } = Astro.props

let href;

if (blok.url.linktype === 'story') {

  const slug = blok.url.url
	href = getTransLink(language, slug)
  console.log(slug)

} else if (blok.url.linktype === 'url') {
	href = blok.url.url;
}

const label = blok.label || 'Become a Member'
const variant = blok.style || 'primary'
---

<Button label={label} href={href} variant={variant} />
